# This is an example .env file.
# Copy this file to .env and fill in your actual credentials and configuration.
# DO NOT commit your actual .env file to version control.

# Flask/Application Secret Key
# IMPORTANT: Generate a strong, random key for your application.
# You can generate one using Python:
# import secrets
# secrets.token_hex(24)
SECRET_KEY=your_very_secret_and_unique_flask_key_here

# MongoDB Connection URI
# Replace with your actual MongoDB connection string.
MONGO_URI=mongodb+srv://your_mongo_user:your_mongo_password@your_mongo_host/your_database_name?retryWrites=true&w=majority&appName=Cluster0

# Mail Server Configuration
MAIL_SERVER=smtp.gmail.com # e.g., smtp.gmail.com, smtp.mailgun.org
MAIL_PORT=587 # Common ports: 587 (TLS), 465 (SSL)
MAIL_USE_TLS=True # Set to True or False
MAIL_USERNAME=your_email_address@example.com
MAIL_PASSWORD=your_email_app_password_or_regular_password # For Gmail, use an App Password if 2FA is enabled

# Application Timezone
# See https://en.wikipedia.org/wiki/List_of_tz_database_time_zones for a list of valid timezones
APP_TIMEZONE=UTC # e.g., UTC, America/New_York, Europe/London, Asia/Kolkata
